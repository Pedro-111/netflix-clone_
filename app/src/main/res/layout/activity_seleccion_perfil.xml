<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_perfiL_inicio"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_netflix_logo"
                android:layout_gravity="center" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/moreButton_inicio_perfil"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_ink_pen"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_perfiL_inicio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="¿Quién está viendo ahora?"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/perfilesRecyclerView_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>