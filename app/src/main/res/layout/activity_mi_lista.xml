<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!-- Toolbar en la parte superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mi_lista"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/milista_arrow_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Lista"
                android:textColor="@android:color/white"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />
        <ImageButton
            android:id="@+id/moreButton_inicio_perfil"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ink_pen"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_mi_lista"
        android:orientation="horizontal"
        android:paddingStart="16dp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PelÃ­culas"/>
    </LinearLayout>

</RelativeLayout>
